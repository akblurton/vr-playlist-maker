.SteamLibrary
  position: fixed
  top: 26px
  left: 0
  right: 0
  bottom: 0
  background: #FFF
  z-index: 10
  overflow-y: scroll;
  width: 100%
  height: calc(100vh - 26px)


  &__app
    padding: 5px
    float: left
    cursor: pointer
    text-align: center
    font-weight: bold
    width: calc(100% / 4)
    height: 120px
    display: flex
    align-items: center
    justify-content: center
    overflow: hidden
    flex-direction: column

    img
      display: block
      margin: 0 auto
      max-width: 90px
      max-height: 90px


    &__title
      font-size: 12px
      font-weight: 400
      white-space: nowrap
      margin-top: 5px
      text-overflow: ellipsis
      overflow: hidden
      width: 100%
      height: 15px
