.App
  width: 100vw
  height: 100vh

  &__start
    width: 100%
    height: 50px
    background: $fg
    color: $bg
    font-size: 16px
    border: 0
    cursor: pointer
    transition: background-color 0.2s ease-in-out
    text-transform: uppercase
    font-family: $font
    &:hover
      background: $fg-hover

    &.is-running
      background: $active
      &:hover
        background: $active-hover


  &__actions
    height: 30px
    background: $fg
