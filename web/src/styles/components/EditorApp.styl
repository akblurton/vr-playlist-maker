.EditorApp
  padding-top: 25px

  &__add
    width: 100%
    height: 50px
    background: $active
    color: $bg
    font-size: 16px
    border: 0
    cursor: pointer
    transition: background-color 0.2s ease-in-out
    text-transform: uppercase
    font-family: $font
    &:hover
      background: $active-hover

  &__file
    visibility: hidden
    position: absolute
    width: 0
    height: 0
    top: -1000px
    left: -1000px
