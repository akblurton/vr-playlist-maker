.OculusLibrary
  position: fixed
  top: 26px
  left: 0
  right: 0
  bottom: 0
  background: #FFF
  z-index: 10
  overflow-y: scroll;
  width: 100%
  height: calc(100vh - 26px)

  &__filter
    height: 30px
    width: 100%
    display: block
    border: 0
    border-bottom: 1px solid #CCC
    margin-bottom: 20px
    font-size: 14px
    padding: 0 15px

  &__list
    overflow: hidden

  &__app
    padding: 5px
    float: left
    cursor: pointer
    text-align: center
    font-weight: bold
    width: calc(100% / 4)
    height: 120px
    display: flex
    align-items: center
    justify-content: center
    overflow: hidden
    flex-direction: column
    transition: opacity 0.2s ease
    will-change: opacity

    &:first-child
      padding-bottom: 15px

    img, .Thumbnail
      display: block
      margin: 0 auto
      width: 90px
      height: 90px


    &__title
      font-size: 12px
      font-weight: 400
      white-space: nowrap
      margin-top: 5px
      text-overflow: ellipsis
      overflow: hidden
      width: 100%
      height: 15px

    &.is-loading
      .OculusLibrary__app
        opacity: 0.4
        pointer-events: none
        &:first-child
          pointer-events: auto
      &::after
        content: ""
        position: fixed
        top: 50%
        left: 50%
        margin-top: -20px
        margin-left: -20px
        background: url("../../icons/loading.svg") no-repeat center / 40px
        animation: spinner 1s linear infinite
        width: 40px
        height: 40px


@keyframes spinner
  0%
    transform: rotate(0deg)
  100%
    transform: rotate(360deg)
